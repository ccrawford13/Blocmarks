<% if @bookmark.valid? %>
   $('#bookmark-list').prepend("<%= escape_javascript(render @bookmark) %>");
   $('.new_bookmark').html("<%= escape_javascript(render partial: 'bookmarks/form', locals: { topic: @topic, bookmark: Bookmark.new }) %>");
 <% else %>
   $('.topics-container').prepend("<div class='alert-box round alert'> <%= flash[:error] = "Error Creating Topic - Topic must be 5 or more Characters" %> </div>");
   $('.alert-box').fadeOut(6000);
 <% end %>