<% if @bookmark.valid? %>
  $('#bookmark-list').prepend("<%= escape_javascript(render 'bookmarks/bookmarks_with_links', bookmark: @bookmark) %>");
  $('.new_bookmark').html("<%= escape_javascript(render partial: 'bookmarks/form', locals: { topic: @topic, bookmark: Bookmark.new }) %>");
<% else %>
  $('.topics-container').prepend("<div class='alert-box round alert'> <%= flash[:error] %> </div>");
<% end %>