.content-container
  .inner-container
    .bookmarks-container
      = render partial: 'bookmarks/form', locals: { topic: @topic, bookmark: @bookmark }
    .row.topics-container
      = div_for(@topic, class: 'row', id: "topic-#{@topic.id}") do
        .large-10.columns#topic-container
          - if policy(@topic).update?
            .delete-link
              = link_to "", edit_topic_path, id: "edit_topic", class: "fi-pencil", remote: true
              = link_to "", [@topic], id: "delete_topic", class: "fi-trash", method: :delete
          .topic-title
            %h3= "# #{@topic.title.titleize}"
            %small= @topic.created_at.to_time
          .edit-form{style: 'display:none'}
      .bookmark-container
        %ul.small-block-grid-3.medium-block-grid-4#bookmark-list
          = render @topic.bookmarks