$(document).ready(function() {
  $('#like-pagination').on("click", function () {
    $('#favorite-list').html("<%= escape_javascript(render partial: 'bookmarks/user_liked_bookmarks', collection: @likes, as: :like) %>");
    $('#like-pagination').html("<%= escape_javascript(paginate(@likes, remote: true)) %>");
  });

  $('#topic-pagination').on("click", function () {
    $('#topic-list').html("<%= escape_javascript(render partial: 'topics/user_topics', collection: @topics, as: :topic) %>");
    $('#topic-pagination').html("<%= escape_javascript(paginate(@topics, remote: true)) %>");
  });

  $('#bookmark-pagination').on("click", function () {
    $('#bookmark-pagination').html("<%= escape_javascript(paginate(@bookmarks, remote: true)) %>");
    $('#bookmark-list').html("<%= escape_javascript(render partial: 'bookmarks/user_bookmarks', collection: @bookmarks, as: :bookmark) %>");
  });
});