.main-header
  .row
    .large-12.columns.intro-text
      .large-6.large-centered.columns
        %h1 Blocmarks
        %h2 Organized Inspiration
.content-header#create-intro
.row.container
  .large-12.columns
    .section-text
      %h1 Organized Links to Whatever Makes You Tick
  .row
    .large-4.columns
      .panel
        %h5.section-text Create & Browse Trending Topics
        %p View your Topics and Those Created by Members of the Blocmarks Community
    .large-4.columns
      .panel
        %h5.section-text Create Bookmarks
        %p Bookmark your Favorite Websites or Email the link to Blocmarks, and We'll Add it!
    .large-4.columns
      .panel
        %h5.section-text Like Bookmarks
        %p Bookmarks can be "Liked" and added to your profile for Easy Access
.content-header#join-blocmarks
.row.container
  .large-12.columns
    .section-text
      %h1 Become a Member of The Blocmarks Community
  .row
    .large-6.columns
      .section-text
        %h3 Join Blocmarks
        = link_to "Sign Up", new_user_registration_path, class: "button", id: "sign_up"
    .large-6.columns
      .section-text
        %h3 Already a Member
        = link_to "Sign In", new_user_session_path, class: "button", id: "sign_in"


  

